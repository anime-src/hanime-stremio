{
  "info": {
    "name": "Hanime Stremio Addon",
    "description": "Collection for testing Hanime Stremio Addon endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:61327",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Manifest",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/manifest.json",
          "host": ["{{baseUrl}}"],
          "path": ["manifest.json"]
        },
        "description": "Get addon manifest with catalog definitions"
      }
    },
    {
      "name": "Catalog",
      "item": [
        {
          "name": "Get Hanime (Default)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/hanime.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "hanime.json"]
            }
          }
        },
        {
          "name": "Get Series Catalog",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/series/series.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "series", "series.json"]
            },
            "description": "Get multi-episode series grouped together"
          }
        },
        {
          "name": "Get Newest",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/newset.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "newset.json"]
            }
          }
        },
        {
          "name": "Get Most Likes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/mostlikes.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "mostlikes.json"]
            }
          }
        },
        {
          "name": "Get Most Views",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/mostviews.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "mostviews.json"]
            }
          }
        },
        {
          "name": "Get Recent",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/recent.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "recent.json"]
            }
          }
        },
        {
          "name": "Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/hanime/search=school.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "hanime", "search=school.json"]
            }
          }
        },
        {
          "name": "Filter by Genre",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/hanime/genre=big boobs.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "hanime", "genre=big boobs.json"]
            }
          }
        },
        {
          "name": "Pagination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/hanime/skip=48.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "hanime", "skip=48.json"]
            },
            "description": "Skip first 48 items (page 2)"
          }
        },
        {
          "name": "Search + Genre Combined",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/catalog/anime/hanime/search=school&genre=vanilla.json",
              "host": ["{{baseUrl}}"],
              "path": ["catalog", "anime", "hanime", "search=school&genre=vanilla.json"]
            },
            "description": "Combine multiple filters using & separator"
          }
        }
      ]
    },
    {
      "name": "Meta",
      "item": [
        {
          "name": "Get Video Metadata",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meta/anime/:videoId.json",
              "host": ["{{baseUrl}}"],
              "path": ["meta", "anime", ":videoId.json"],
              "variable": [
                {
                  "key": "videoId",
                  "value": "shishunki-sex-1",
                  "description": "Video slug/ID (example value)"
                }
              ]
            },
            "description": "Get metadata for a specific video. Replace :videoId with actual video slug"
          }
        },
        {
          "name": "Get Series Metadata",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/meta/series/:seriesId.json",
              "host": ["{{baseUrl}}"],
              "path": ["meta", "series", ":seriesId.json"],
              "variable": [
                {
                  "key": "seriesId",
                  "value": "series:mujin-eki",
                  "description": "Series ID with series: prefix"
                }
              ]
            },
            "description": "Get metadata for a series with episodes list. Series ID format: series:{base-slug}"
          }
        }
      ]
    },
    {
      "name": "Stream",
      "item": [
        {
          "name": "Get Video Streams",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/stream/anime/:videoId.json",
              "host": ["{{baseUrl}}"],
              "path": ["stream", "anime", ":videoId.json"],
              "variable": [
                {
                  "key": "videoId",
                  "value": "shishunki-sex-1",
                  "description": "Video slug/ID (example value)"
                }
              ]
            },
            "description": "Get available streams for a video. Replace :videoId with actual video slug"
          }
        }
      ]
    },
    {
      "name": "Proxy",
      "item": [
        {
          "name": "Get Poster Image",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/proxy/images/posters/:imageName",
              "host": ["{{baseUrl}}"],
              "path": ["proxy", "images", "posters", ":imageName"],
              "variable": [
                {
                  "key": "imageName",
                  "value": "shishunki-sex-1-pv1.png",
                  "description": "Image filename (example value)"
                }
              ]
            },
            "description": "Proxy a poster image from Hanime CDN"
          }
        },
        {
          "name": "Get Cover Image",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/proxy/images/covers/:imageName",
              "host": ["{{baseUrl}}"],
              "path": ["proxy", "images", "covers", ":imageName"],
              "variable": [
                {
                  "key": "imageName",
                  "value": "shishunki-sex-1-cv1.png",
                  "description": "Image filename (example value)"
                }
              ]
            },
            "description": "Proxy a cover image from Hanime CDN"
          }
        }
      ]
    }
  ]
}

